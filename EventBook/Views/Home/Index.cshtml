@{
    ViewData["Title"] = "EventEase - Home Page";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to EventEase</h1>
        <p class="lead">Your one-stop solution for venue bookings and event management</p>
        <img src="https://via.placeholder.com/400x200" class="img-fluid" alt="EventEase Logo" />
    </div>

    <!-- Venues Overview -->
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Venue">
                <div class="card-body">
                    <h5 class="card-title">Venues</h5>
                    <p class="card-text">Discover our diverse venues for every occasion. Find the perfect location for your event.</p>
                    <!-- Removed link to make it non-clickable -->
                    <button class="btn btn-secondary" disabled>View Venues</button>
                </div>
            </div>
        </div>

        <!-- Events Overview -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Event">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Events</h5>
                    <p class="card-text">Stay updated on the exciting events happening at our venues. Book tickets or plan your visit!</p>
                    <!-- Removed link to make it non-clickable -->
                    <button class="btn btn-secondary" disabled>See Events</button>
                </div>
            </div>
        </div>

        <!-- Bookings Overview -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Booking">
                <div class="card-body">
                    <h5 class="card-title">Bookings</h5>
                    <p class="card-text">Manage and track bookings for events and venues. Secure your booking with ease.</p>
                    <!-- Removed link to make it non-clickable -->
                    <button class="btn btn-secondary" disabled>Manage Bookings</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Section: Quick Info or Testimonials -->
    <div class="text-center mt-5">
        <h2>Why Choose EventEase?</h2>
        <p>We offer a seamless platform for managing venue bookings, events, and customer satisfaction.</p>
    </div>
</div>
